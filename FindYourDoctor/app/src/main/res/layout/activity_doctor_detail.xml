<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="10"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bgandroid"
    android:layout_height="match_parent"
    tools:context=".Activity.DoctorDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.75"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5">

            <androidx.cardview.widget.CardView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:layout_marginTop="2dp"
                    android:layout_width="20dp"
                    android:layout_marginLeft="1dp"
                    android:layout_height="20dp"
                    android:background="@null"
                    android:src="@drawable/back">
                </ImageView>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="8.5"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:text="Doctor Details"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="#1E1E1E"
                android:layout_height="match_parent">

            </TextView>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="2.5"
        android:layout_height="0dp">

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="180dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#6E6E08"
            app:cardCornerRadius="15dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:weightSum="10"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="7"
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_height="0dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.5">


                        <ImageView
                            android:id="@+id/iv_avatar_doctor_details"
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="17dp"
                            android:src="@drawable/image">

                        </ImageView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:weightSum="10"
                        android:orientation="vertical"
                        android:layout_weight="6.5">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3.5"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_name_doctor_details"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dr.Pediatrician"
                                android:textColor="#302F2F"
                                android:textSize="22sp"
                                android:textStyle="bold">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2.5"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_specialist_doctor_details"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Specialist Cardiologist"
                                android:textSize="16sp"></TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="3"
                            android:weightSum="10"
                            android:orientation="horizontal"
                            android:layout_height="0dp">


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="5"
                                android:gravity="center">

                                <RatingBar
                                    android:id="@+id/rtb_doctor_details"
                                    style="@style/Widget.AppCompat.RatingBar.Small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:isIndicator="true"
                                    android:max="5"
                                    android:progressTint="@color/green_star"
                                    android:rating="0"
                                    android:secondaryProgressTint="@color/green_star" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="5"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tv_price_doctor_details"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$ 28.00/hr">

                                </TextView>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:layout_height="0dp">

                    <Button
                        android:id="@+id/btn_booking_doctor_details"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/custom_button_book"
                        android:text="Book Now"
                        android:textAllCaps="false"
                        android:textColor="#ffff"></Button>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.25"
        android:layout_height="0dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1.25"
        android:layout_height="0dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="15dp">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="20dp"
                app:cardBackgroundColor="#F8F5F5"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/tv_patient_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="700"
                    android:textAlignment="center"
                    android:textColor="#232222"
                    android:textSize="24sp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Patient"
                    android:textAlignment="center"
                    android:textColor="#8C8A8A"
                    android:textSize="15sp">

                </TextView>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            app:cardCornerRadius="15dp">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="20dp"
                app:cardBackgroundColor="#F8F5F5"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/tv_successed_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="700"
                    android:textAlignment="center"
                    android:textColor="#232222"
                    android:textSize="24sp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Successed"
                    android:textAlignment="center"
                    android:textColor="#8C8A8A"
                    android:textSize="15sp">

                </TextView>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="2.5"
        android:orientation="vertical"
        android:weightSum="10"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="4"
            android:weightSum="10"
            android:orientation="vertical"
            android:layout_height="0dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="3.5"
                android:layout_height="0dp">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Address"
                    android:layout_marginLeft="20dp"
                    android:textColor="#232323"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_height="match_parent">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="10"
                android:orientation="vertical"
                android:layout_weight="6"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="4"
                    android:layout_height="0dp">

                    <TextView
                        android:id="@+id/tv_clinic_name_doctor_details"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:text="Phòng khám Chuyên khoa Da Liễu"
                        android:textSize="12sp">

                    </TextView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="6"
                    android:layout_height="0dp">

                    <TextView
                        android:id="@+id/tv_clinic_address_doctor_details"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:text="207 Phố Huế - Hai Bà Trưng - Hà Nội"
                        android:textSize="12sp">

                    </TextView>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="6"
            android:weightSum="10"
            android:orientation="vertical"
            android:layout_height="0dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="2.5"
                android:layout_height="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:text="Introduce"
                    android:textSize="20sp"
                    android:textColor="#121111"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:layout_height="match_parent">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="7"
                android:layout_height="0dp">

                <TextView
                    android:id="@+id/tv_introduce_doctor_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:justificationMode="inter_word"
                    android:paddingRight="15dp"
                    android:text="Hi there! My name is John and I am a dermatologist. As  a dermatologist, I specialize in diagnosing and treating conditions related to the skin, hair, and nails. My work involves examining patients' skin, identifying any problems, and providing treatments to help them manage their conditions"
                    android:textColor="#121111"
                    android:textSize="12sp">

                </TextView>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="2.5"
        android:orientation="vertical"
        android:weightSum="10"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/tv_review"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:text="Review"
                android:textColor="#0C0C0C"
                android:textSize="20sp"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="8"
            android:layout_height="0dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_patient_review_doctor_details"
                android:layout_width="match_parent"
                android:paddingLeft="20dp"
                android:layout_height="match_parent">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>