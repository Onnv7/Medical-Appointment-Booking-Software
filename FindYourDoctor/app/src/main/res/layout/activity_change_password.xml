<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".ChangePasswordActivity">

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="304dp"
            android:layout_height="59dp"
            android:layout_marginTop="88dp"
            android:background="@drawable/backgroud_shadow"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView129"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New password"
                android:textColor="#0EBE7F"
                android:textStyle="bold"
                tools:textStyle="bold" />

            <EditText
                android:id="@+id/edt_new_password_cp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="-4dp"
                android:background="@null"
                android:ems="10"
                android:hint="New password"
                android:inputType="textPersonName"
                android:paddingStart="0dp"
                android:textColor="@color/secondary_gray"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="304dp"
            android:layout_height="59dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/backgroud_shadow"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout7"
            app:layout_constraintStart_toStartOf="@+id/linearLayout7"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Re-password"
                android:textColor="#0EBE7F"
                android:textStyle="bold"
                tools:textStyle="bold" />

            <EditText
                android:id="@+id/edt_re_new_password_cp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="-4dp"
                android:background="@null"
                android:ems="10"
                android:hint="Re-password"
                android:inputType="textPersonName"
                android:paddingStart="0dp"
                android:textColor="@color/secondary_gray"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/btn_change_password_cp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/button_green_background"
            android:gravity="center"
            android:text="Change password"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout8"
            app:layout_constraintStart_toStartOf="@+id/linearLayout8"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout8" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>