<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Activity.AppointmentDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Appointment details"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:id="@+id/iv_doctor_avatar_history_details"
                        android:layout_width="83dp"
                        android:layout_height="77dp"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/avatar_background"
                        android:scaleType="fitXY"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/avt_doctor" />

                    <TextView
                        android:id="@+id/tv_hello_name_profile_fragment"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="18sp"
                        android:text="Dr.Mahmud Nik Hasan"
                        android:textColor="#5B6889"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/iv_doctor_avatar_history_details"
                        app:layout_constraintStart_toStartOf="@+id/iv_doctor_avatar_history_details"
                        app:layout_constraintTop_toBottomOf="@+id/iv_doctor_avatar_history_details" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="36dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView31"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Created at"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_created_at_history_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="26 January 2023, 7:00 - 7:30 AM"
                        android:textColor="#545756" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="36dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_wrong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Medical examination day"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_appoinment_time_history_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="26 January 2023, 7:00 - 7:30 AM"
                        android:textColor="#545756" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="36dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView156"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Status"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_status_history_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Waiting"
                        android:textColor="#545756" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="36dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView154"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Your message "
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_reminder_history_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tôi bị đau chân, nhứt đầu mỏi gối tê tay  "
                        android:textColor="#545756" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lo_doctor_advice_history_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="36dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Doctor's advice"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_doctor_advice_history_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tôi bị đau chân, nhứt đầu mỏi gối tê tay  "
                        android:textColor="#545756" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lo_review_history_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="36dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView152"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Your review"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <RatingBar
                        android:id="@+id/rtb_doctor_history_details"
                        style="@style/Widget.AppCompat.RatingBar.Indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:progressTint="@color/green_star"
                        android:rating="0"
                        android:stepSize="1"
                        tools:stepSize="0.1" />

                    <TextView
                        android:id="@+id/tv_review_history_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cái này là để khi đã submit thì hiện đánh giá thì hiện lên và ẩn textbox + button"
                        android:textColor="#545756" />

                </LinearLayout>

                <EditText
                    android:id="@+id/edt_review_history_details"
                    android:layout_width="335dp"
                    android:layout_height="54dp"
                    android:layout_gravity="center"
                    android:background="@drawable/textbox_background"
                    android:ems="10"
                    android:hint="Write your review"
                    android:inputType="textPersonName"
                    android:paddingStart="12dp"
                    android:textColor="#545756"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_submit_history_details"
                    android:layout_width="295dp"
                    android:layout_height="54dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/button_green_background"
                    android:text="Submit" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>