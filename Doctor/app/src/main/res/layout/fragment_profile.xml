<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_01"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="311dp"
                android:background="@drawable/background_blue_bottom">

                <TextView
                    android:id="@+id/tv_hello_name_profile_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="44dp"
                    android:gravity="center"
                    android:text="Hello Abdullah Mamun"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.547"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="50dp"
                    app:cardCornerRadius="150dp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_hello_name_profile_fragment"
                    app:layout_constraintStart_toStartOf="@+id/tv_hello_name_profile_fragment"
                    app:layout_constraintTop_toBottomOf="@+id/tv_hello_name_profile_fragment">

                    <ImageView
                        android:id="@+id/iv_avatar_doctor_pf"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center" />
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/btn_upload_image_pf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="104dp"

                    android:layout_marginTop="108dp"
                    android:elevation="4dp"
                    app:layout_constraintEnd_toEndOf="@+id/cardView2"
                    app:layout_constraintStart_toStartOf="@+id/cardView2"
                    app:layout_constraintTop_toTopOf="@+id/cardView2"
                    app:srcCompat="@drawable/camera" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="54dp"
                android:layout_marginBottom="25dp"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <TextView
                    android:id="@+id/tv_datetimeasas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="Personal information"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/backgroud_shadow"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="@color/blue_text"
                        android:textStyle="bold"
                        tools:textStyle="bold" />

                    <EditText
                        android:id="@+id/edt_name_pf"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="-4dp"
                        android:background="@null"
                        android:ems="10"
                        android:focusable="false"
                        android:hint="Name"
                        android:inputType="textPersonName"
                        android:paddingStart="0dp"
                        android:textColor="@color/secondary_gray"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/backgroud_shadow"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="@color/blue_text"
                        android:textStyle="bold"
                        tools:textStyle="bold" />

                    <EditText
                        android:id="@+id/edt_email_pf"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="-4dp"
                        android:background="@null"
                        android:ems="10"
                        android:focusable="false"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:paddingStart="0dp"
                        android:textColor="@color/secondary_gray"
                        android:textSize="16sp"
                        tools:inputType="none" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/backgroud_shadow"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contact Number"
                        android:textColor="@color/blue_text"
                        android:textStyle="bold"
                        tools:textStyle="bold" />

                    <EditText
                        android:id="@+id/edt_phone_pf"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="-4dp"
                        android:background="@null"
                        android:ems="10"
                        android:hint="Contact Number"
                        android:inputType="textPersonName"
                        android:paddingStart="0dp"
                        android:textColor="@color/secondary_gray"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_birthdate"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/backgroud_shadow"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date of birth"
                        android:textColor="@color/blue_text"
                        android:textStyle="bold"
                        tools:textStyle="bold" />

                    <EditText
                        android:id="@+id/edt_birthDate_pf"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="-4dp"
                        android:background="@null"
                        android:drawableEnd="@drawable/calendar_icon"
                        android:ems="10"
                        android:focusable="false"
                        android:hint="Date of birth"
                        android:inputType="text"
                        android:paddingStart="0dp"
                        android:textColor="@color/secondary_gray"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/backgroud_shadow"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <TextView
                        android:id="@+id/textView235"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Clinic name"
                        android:textColor="@color/blue_text"
                        android:textStyle="bold"
                        tools:textStyle="bold" />

                    <EditText
                        android:id="@+id/edt_clinic_name_pf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:ems="10"
                        android:focusable="false"
                        android:hint="Location"
                        android:inputType="textPersonName"
                        android:paddingStart="0dp"
                        android:textColor="@color/secondary_gray"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/backgroud_shadow"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textColor="@color/blue_text"
                        android:textStyle="bold"
                        tools:textStyle="bold" />

                    <EditText
                        android:id="@+id/edt_address_pf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:ems="10"
                        android:focusable="false"
                        android:hint="Location"
                        android:inputType="textPersonName"
                        android:paddingStart="0dp"
                        android:textColor="@color/secondary_gray"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/backgroud_shadow"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textColor="@color/blue_text"
                        android:textStyle="bold"
                        tools:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RadioGroup
                            android:id="@+id/rdo_gender_pf"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rdo_female_pf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Female"
                                android:textColor="@color/secondary_gray"
                                android:textSize="16sp" />

                            <RadioButton
                                android:id="@+id/rdo_male_pf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Male"
                                android:textColor="@color/secondary_gray"
                                android:textSize="16sp" />
                        </RadioGroup>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/backgroud_shadow"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <TextView
                        android:id="@+id/textView215"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Specialist"
                        android:textColor="@color/blue_text"
                        android:textStyle="bold"
                        tools:textStyle="bold" />

                    <EditText
                        android:id="@+id/edt_specialist_pf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:ems="10"
                        android:focusable="false"
                        android:hint="Location"
                        android:inputType="textPersonName"
                        android:paddingStart="0dp"
                        android:textColor="@color/secondary_gray"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/btn_update_pf"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/background_blue_round"
                    android:gravity="center"
                    android:text="Update"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_more_pf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/icon_more" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_logout_pf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/fab_more_pf"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/icon_logout" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_change_password_pf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/fab_logout_pf"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/icon_password" />

</androidx.constraintlayout.widget.ConstraintLayout>
